<div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h1 class="text-center"><%= @seller.name %></h1>

        <h3>All of <%= @seller.name %>'s products:</h3>

          <% @seller.product_groups.each do |product_group| %>
            <div class="white-card text-center">
              <div class="row">
                <div class="col-xs-3">
                  <h5><%= link_to product_group.name, product_group_path(product_group) %></h5>
                  <p><%= product_group.product_refs.first.price %> &euro;</p>
                </div>
                <div class="col-xs-9">
                  <% product_group.picture_products.each do |pic| %>
                    <%= link_to product_group_path(product_group) do %>
                        <%= image_tag pic.picture.url(:medium) %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>










        <br>
        <br>
        <br>
        <br>
        <div class="padded-bottom">
          <div id="map" style="width: 100%; height: 600px;"></div>
          <% content_for(:after_js) do %>
            <%= javascript_tag do %>
              var sellerLocation = <%= raw @seller_location.to_json %>
              console.log(sellerLocation);
              $(document).on('ready', function() {
                handler = Gmaps.build('Google');
                handler.buildMap({ internal: { id: 'map' } }, function(){
                  markers = handler.addMarkers(sellerLocation);
                  console.log(markers);
                  handler.bounds.extendWith(markers);
                  handler.fitMapToBounds();
                  handler.getMap().setZoom(14);
                });
              });
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
