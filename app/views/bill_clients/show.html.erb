<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Order details</h1>


      <p>Your total is: <%= number_to_currency_fr(@bill.amount) %> &euro;</p>



      <p>
        Your order details:
      </p>

      <ul>
        <% @bill.orders.each do |order| %>
          <% order.order_items.each do |item| %>
            <li>
              <%= "#{item.quantity} x #{item.product_ref.product_group.name} #{item.product_ref.color_name} at #{number_to_currency_fr(item.product_ref.price)}"%> &euro; each
            </li>
          <% end %>
        <% end %>
      </ul>

      <!-- <p><%#= link_to "Confirm", new_bill_client_payment_path(@bill), class: "btn btn-success" %></p> -->

      <h4>Address</h4>

      <%= form_tag bill_client_path(@bill), method: :put do %>
        <p>Choisissez une adresse dans votre carnet d'adresses:</p>
        <% current_user.addresses.each do |address| %>
          <%= radio_button_tag :address_id, address.id %>
          <%= label_tag "address_id_#{address.id}" do %>
            <p><%= address.delivery_address_street %></p>
            <p><%= address.delivery_address_zip %></p>
            <p><%= address.delivery_address_city %></p>
          <% end %>
        <% end %>

        <p><%= submit_tag "Finaliser la commande",  class: "btn btn-success" %></p>
      <% end %>

      <p>CrÃ©ez une nouvelle adresse</p>
      <%= simple_form_for @address, url: addresses_path do |f| %>
        <%= f.error_notification %>

        <%= hidden_field_tag :from, "bill_client" %>

        <%= f.input :delivery_address_street %>
        <%= f.input :delivery_address_zip %>
        <%= f.input :delivery_address_city %>

        <%= f.button :submit %>
      <% end %>


    </div>
  </div>
</div>
