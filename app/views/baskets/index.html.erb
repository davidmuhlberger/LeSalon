<div class="window-height">
  <div>
    <h1 class="text-panier">Votre panier</h1>
  </div>
  <% if @basket.basket_items.empty? %>
    <div class="text-panier">
      <p>Votre panier est vide.</p>
      <p>Check out our products:</p>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag "http://placehold.it/200x200", class: "empty-basket"%>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag "http://placehold.it/200x200", class: "empty-basket"%>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag "http://placehold.it/200x200", class: "empty-basket"%>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag "http://placehold.it/200x200", class: "empty-basket"%>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag "http://placehold.it/200x200", class: "empty-basket"%>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag "http://placehold.it/200x200", class: "empty-basket"%>
        </div>
      </div>
    </div>
  <% else %>
    <% @basket.basket_items.each do |item| %>
      <div class="position">
        <div class="panier-card">
          <%= link_to product_group_path(item.product_ref.product_group) do %>
            <%= image_tag item.product_ref.image, width: "200", class: "img-product-panier" %>
          <% end %>
          <p><%= item.product_ref.product_group.name %></p>
          <%= link_to sellers_page_path(item.product_ref.product_group.seller) do %>
            <p><%= item.product_ref.product_group.seller.name %></p>
          <% end %>
        </div>
        <div id="delete-panier">
          <%= link_to basket_item_path(item), method: :delete do %>
            <i class="fa fa-times"></i>
          <%end %>
        </div>
        <div id="color-panier">
          <%= image_tag item.product_ref.picture, class: "sample-image" %>
          <p id="text-color-panier"><%= item.product_ref.color_name %></p>
        </div>
        <div id="quantity-panier">
          <div>
            <%= simple_form_for(item) do |f| %>
              <%= f.select :quantity, [['1','1'],['2','2'],['3','3']] %>
            <% end %>
          </div>
          <p id="text-price-panier">Prix par unité: <%= item.product_ref.price %> &euro;</p>
          <p>Prix total: <%= item.product_ref.price * item.quantity %> &euro;</p>
        </div>
        <div id="delivery-panier">
          <p>Délai de livraison</p>
          <hr>
          <p><%= item.product_ref.delivery_time %></p>
        </div>
      </div>
    <% end %>
    <hr>
    <div class="position">
      <p class="panier-card"><b>Prix Total:</b></p>
      <% sum = 0 %>
      <div id="total-price-basket">
        <% @basket.basket_items.each do |item| %>
          <p><b><%= sum += item.product_ref.price * item.quantity %> &euro;</b></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
