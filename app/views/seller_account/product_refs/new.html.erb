<div class="container">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
      <h1>Créer une nouvelle référence pour <%=@product_group.name %></h1>
      <br>

      <%= simple_form_for(@product_ref, url: seller_account_product_group_product_refs_path(@product_group), html: { multipart: true }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :color_name, :label => "Couleur" %>
        <%= f.input :price, :label => "Prix en euro" %>
        <%= f.input :promotion_percentage, collection: [0, 5, 10, 15, 20, 25, 30, 35, 40, 45, 50, 55, 60, 65, 70], default: 0, :label => "Promotion en % sur le prix" %>
        <%= f.input :availability, :label => "Disponibilité actuelle" %>
        <%= f.input :delivery_time, :label => "Délai de livraison" %>
        <%= f.input :reference, :label => "Code de référence" %>
        <%= f.input :picture, as: :file, label: "Echantillon de la couleur" %>
        <%= f.input :image, as: :file, label: "Illustration du produit" %>
        <p><%= f.button :submit, :label => "Créer la référence" %></p>
      <% end %>
    </div>
    <div class="col-xs-2"></div>
  </div>
</div>
