<div class="container">
  <div class="row">
    <div class="col-xs-12">


      <h3>Order number <%= "#{@order.id} for #{@order.bill_client.user.first_name} #{@order.bill_client.user.last_name}" %></h3>

      <% sum = 0 %>
      <ul>
        <% @order.order_items.each do |item| %>
          <li>
            <%= "#{item.quantity} x #{item.product_ref.product_group.name} #{item.product_ref.color_name}" %>
            <% sum += item.product_ref.price * (1 - item.product_ref.promotion_percentage) * item.quantity %>
          </li>
        <% end %>
      </ul>

      <p>Total: <%= number_to_currency_fr(sum) %> &euro;</p>
      <p>Status: <%= @order.status_order %></p>

      <p>Delivery address:
        <br><%= @order.bill_client.address.delivery_address_street %>
        <br><%= @order.bill_client.address.delivery_address_zip %>
        <br><%= @order.bill_client.address.delivery_address_city %>
      </p>


      <% if @order.status_order == "pending" %>
        <p><%= link_to "Mark as sent", sent_seller_account_order_path(@order), class: "btn btn-success" %></p>
      <% end %>
   </div>
  </div>
</div>
