<%= content_for(:title) do %>
  Your catalogue
<% end %>
<div class="text-center">
  <h1><%= "Your catalogue" %></h1>
</div>
<div class="container bg-darker-grey">
    <% @product_groups.each do |product_group| %>
      <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
          <div class="row white-card">
            <div class="col-xs-12 col-sm-6 text-center">
              <% unless product_group.picture_products.empty? %>
                <%= image_tag product_group.picture_products.first.picture.url(:medium) %>
              <% end %>
            </div>
            <div class="col-xs-12 col-sm-6 text-center">
              <h4><%=link_to product_group.name, seller_account_product_group_path(product_group) %></h4>
              <hr>
              <p><%= product_group.category_type %> </p>
              <p><%= product_group.category_style %> </p>
              <% product_group.product_refs.each do |ref| %>
                <%= image_tag ref.picture.url(:thumb), class: "sample-image" %>
              <% end %>
              <br>
            </div>
          </div>
        </div>
        <div class="col-xs-1"></div>
      </div>
    <% end %>
    <div class="row text-center">
      <%= link_to "Add new product", new_seller_account_product_group_path, class: "btn btn-primary"%>
    </div>

<br>
</div>
